<% wrap_layout :layout do %>
<section class="white doc">
	<div class="container">
		<div class="row-content">
			<div class="col-sm-12">
				<ol class="breadcrumb library-breadcrumb">
					<li><a href="/">Guides &amp; Tutorials</a></li>
					<% if current_page.parent %>
						<li><%= link_to current_page.parent.data.title, current_page.parent %></li>
					<% end %>
					<li class="active"><%= current_page.data.title %></li>
				</ol>
			</div>
		</div>

		<div class="row">
			<%= Kramdown::Document.new(<<-EOS
{::options parse_block_html="true"/}
<div id="article-body" class="col-sm-8 col-sm-push-4">
<h1 id="doc-title">#{current_page.data.title}</h1>
#{File.read(current_page.source_file).gsub(/\A---\n(?:[[:print:]]+\s)+/m, '')}
</div>
<div id="doc-sidebar" class="col-sm-4 col-sm-pull-8 hidden-xs">
<div>
<h3 id="doc-sidebar-title" class="h5">Sections</h3>
* Table of Contents
{:toc .sidebar .sidebar-library}
</div>
</div>
EOS
			).to_html %>
		</div>
	</div>
</section>

<% end %>
