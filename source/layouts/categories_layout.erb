<% wrap_layout :layout do %>
<section class="primary">
	<div class="container">
		<div class="row-content">
			<div class="col-sm-12">
				<ol class="breadcrumb library-breadcrumb">
					<li><a href="/">Guides &amp; Tutorials</a></li>
					<li class="active"><%= current_page.data.title %></li>
				</ol>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<h1 class="text-center"><%= current_page.data.title %></h1>
				<p class="text-center lead"><%= current_page.data.intro %></p>
				<%= yield %>
			</div>
		</div>
	</div>
</section>

<section class="primary extra-space-bottom">
	<div class="container">
		<div class="row">
				<div class="col-md-12">
					<%= partial 'categories' %>
				</div>
			</div>
		</div>
	</div>
</section>
<% end %>
