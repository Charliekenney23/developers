<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

.highlight { margin: 20px 0 !important; }
.highlight table td { padding: 0; }
.highlight table td pre { border-color: #ddd; }

/*li .highlight { margin-bottom: 20px; }*/
dd .highlight { margin-top: 0px !important; }

td.code {
	width: 100%;
	max-width: 0px;
}

.code pre  {
	white-space: pre;
	overflow-x: auto;
	word-break: inherit;
	word-wrap: inherit;
}

pre.lineno {
	background-color: #fafafa;
	color: #999;
	border-right: 0 !important;
	word-break: normal;
}
