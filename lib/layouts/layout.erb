<%
require 'pathname'
library_url = 'https://library.linode.com'
path = Pathname.new(current_page.source_file).realpath.to_s.match(/source\/(.*)\.md$/)[1]
canonical_url = "#{library_url}/#{path}"
%>

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title><%= current_page.data.title || 'Linux VPS Guides and Technical Articles' %> - Linode Library</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="<%= current_page.data.description %>">
		<meta name="keywords" content="<%= current_page.data.keywords %>">

		<%= stylesheet_link_tag 'home', {:rel=>'stylesheet', :media=>'all'} %>
		<%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js' %>

		<link href='//fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>

		<link rel='canonical' href="<%= canonical_url %>">

		<link rel="shortcut icon" href="/favicon.ico">
	</head>

	<body class="no-subnav">
		<header>
			<%= partial 'nav' %>
			<%= partial 'subnav' %>
		</header>

		<%= yield %>

		<footer>
			<%= partial 'footer' %>
		</footer>

		<%= partial 'js' %>
	</body>
</html>
