<% wrap_layout :layout do %>
<section class="alt some-space first-section">
  <div class="container">
    <div class="row-content">
      <div class="col-sm-12">
        <h1 class="h1 text-center library-header"><%= current_page.data.title %></h1>
      </div>
    </div>
    <div id="search" class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <gcse:searchbox-only resultsUrl="/docs/search" newWindow="false" queryParameterName="q"></gcse:searchbox-only>
      </div>
    </div>
  </div>
</section>

<section class="primary extra-space-bottom">
  <div class="container">
    <div class="row-content">
      <div class="col-sm-12">
        <%= yield %>
      </div>
    </div>
    <% current_page.data.tiles.each_with_index do |tile, tile_index| %>
      <% if (tile_index + 1) % 3 == 1 %><div class="row-tiles"><% end %>
      <div class="col-sm-4">
        <a class="library-tile" href="/docs/<%= tile['url'] %>">
          <div class="library-tile text-center">
            <% if tile['icon'] %><h2><i class="fa fa-<%= tile['icon'] %>"></i></h2><% end %>
            <h2 class="tile-title"><%= tile['title'] %></h2>
          </div>
        </a>
      </div>
      <% if (tile_index + 1) % 3 == 0 || tile_index == current_page.data.tiles.count - 1 %></div><% end %>
    <% end %>
  </div>
</section>

<section class="neutral some-space">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h3>Get paid to write for Linode.</h3>
        <p><a href="/docs/contribute">Learn More <span class="caret-right"></span></a></p>
      </div>
    </div>
  </div>
</section>
<% end %>
