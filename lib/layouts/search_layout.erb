<% wrap_layout :layout do %>
<section class="primary extra-space bottom first-section">
  <div class="container">
    <%= partial 'breadcrumb' %>

    <div class="row-content">
      <div class="col-sm-8">
        <div id="search-results"></div>
      </div>
    </div>

    <div class="row-content remove-after-search">
      <div class="col-sm-12">
        <div id="library-search-status">
          <div class="library-spinner"></div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 text-center">
        <ul class="pager library-pager">
          <li id="pager-prev"><a id="pager-prev-link" href="">&laquo; Previous Page</a></li>
          <li id="pager-next"><a id="pager-next-link" href="">Next Page &raquo;</a></li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 text-center">
        <small id="library-page-num"></small>
      </div>
    </div>

  </div>
</section>

<script type='text/javascript'>
  $(document).ready(function() { Search.run() });
</script>

<% end %>
