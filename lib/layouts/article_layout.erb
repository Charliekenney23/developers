<% wrap_layout :layout do %>
<section class="primary first-section">
  <div class="container">

    <%= partial 'breadcrumb' %>

    <div class="row" itemscope itemtype="http://schema.org/TechArticle">
      <div class="col-sm-12">
        <div class="row-content">
          <div class="col-sm-12">

            <p class="doc-time doc-modified-time"><small>
              Updated <time itemprop="dateModified" datetime="#{Time.parse(current_page.data.modified).iso8601}"><%= current_page.data.published %></time>
            </small></p>
            <h1 id="doc-title" itemprop="headline"><%= current_page.data.title %></h1>
          </div>
        </div>

        <div class="row">
          <%= Kramdown::Document.new(<<-EOS
{::options parse_block_html="true"/}
<div id="article-body" class="col-sm-9 col-sm-push-3 doc">
<p class="doc-time"><small>Published <time itemprop="datePublished" datetime="#{Time.parse(current_page.data.published).iso8601}">#{current_page.data.published}</time> by <span itemprop="author">#{current_page.data.author.name}</span>. <a class="dsq-comment-count" href="#disqus_thread">Comments</a> </small></p>
#{ partial 'deprecated' }
#{File.read(current_page.source_file).gsub(/\A---\n(?:[[:print:]]+\s)+/m, '')}
#{ partial 'more' }
</div>
<div id="doc-sidebar" class="col-sm-3 col-sm-pull-9 hidden-xs">
<div class="doc-sidebar-inner">
<h3 id="doc-sidebar-title">In This Guide:</h3>
* Table of Contents
{:toc .sidebar .sidebar-library}
</div>
#{ partial 'github' }
</div>
EOS
          ).to_html %>
        </div>
      </div>

      <div id="disqus_thread" class="col-sm-9 col-sm-push-3"></div>
    </div>

  </div>
</section>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'ldocs'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();

        (function () {
            var s = document.createElement('script'); s.async = true;
            s.type = 'text/javascript';
            s.src = '//' + disqus_shortname + '.disqus.com/count.js';
            (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
        }());
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

<div class="modal fade" id="img-modal" tabindex="-1" role="dialog" aria-labelledby="imageModal" aria-hidden="true">
  <div class="modal-dialog modal-full">
    <div class="modal-content">
      <div class="modal-header">
        <h4 id="img-modal-title" class="modal-title">Image Detail</h4>
      </div>
      <div class="modal-body">
        <img id="img-modal-image" class="img-responsive">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-blue" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<% end %>
